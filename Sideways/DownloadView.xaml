<UserControl x:Class="Sideways.DownloadView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:alphaVantage="clr-namespace:Sideways.AlphaVantage"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:sideways="clr-namespace:Sideways"
             d:DataContext="{d:DesignInstance alphaVantage:Downloader,
                                              IsDesignTimeCreatable=False}"
             d:DesignHeight="450"
             d:DesignWidth="800"
             mc:Ignorable="d">
    <TabControl>
        <TabItem Header="Top ups">
            <DataGrid AutoGenerateColumns="False" ItemsSource="{Binding TopUps}">
                <DataGrid.Columns>
                    <DataGridTextColumn Binding="{Binding Symbol}" Header="Symbol" />
                    <DataGridTextColumn Binding="{Binding LastComplete}" Header="Complete to" />
                    <DataGridTextColumn Binding="{Binding LastDay}" Header="Last day" />
                    <DataGridTextColumn Binding="{Binding LastMinute}" Header="Last minute" />
                    <DataGridTemplateColumn Header="Download">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate DataType="{x:Type alphaVantage:TopUp}">
                                <Button Command="{Binding DownloadCommand}" Content="Download" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </TabItem>

        <TabItem Header="Running">
            <ItemsControl ItemsSource="{Binding Downloads}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate DataType="{x:Type alphaVantage:Download}">
                        <StackPanel Background="Transparent" Orientation="Horizontal">
                            <StackPanel.ToolTip>
                                <ToolTip d:DataContext="{d:DesignInstance alphaVantage:Download, IsDesignTimeCreatable=False}" DataContext="{Binding RelativeSource={RelativeSource Self}, Path=PlacementTarget.DataContext}">
                                    <StackPanel>
                                        <TextBlock Text="{Binding Start, StringFormat='Start: {0:t}'}" />
                                        <TextBlock Text="{Binding End, StringFormat='End: {0:t}'}" />
                                        <TextBlock Foreground="{x:Static sideways:Brushes.Error}" Text="{Binding Exception.Message, StringFormat='Error: {0:t}'}" />
                                    </StackPanel>
                                </ToolTip>
                            </StackPanel.ToolTip>

                            <ContentPresenter Margin="2,0" Content="{Binding Status}">
                                <ContentPresenter.ContentTemplateSelector>
                                    <sideways:DownloadStatusTemplateSelector>
                                        <sideways:DownloadStatusTemplateSelector.Unknown>
                                            <DataTemplate>
                                                <Path 
                                                    sideways:Icon.IsSpinning="True"
                                                    Data="{StaticResource QuestionGeometry}"
                                                    Fill="{x:Static sideways:Brushes.Disabled}"
                                                    Style="{StaticResource IconStyle}" />
                                            </DataTemplate>
                                        </sideways:DownloadStatusTemplateSelector.Unknown>

                                        <sideways:DownloadStatusTemplateSelector.Waiting>
                                            <DataTemplate>
                                                <Path 
                                                    sideways:Icon.IsSpinning="True"
                                                    Data="{StaticResource QueueGeometry}"
                                                    Fill="{x:Static sideways:Brushes.Disabled}"
                                                    Style="{StaticResource IconStyle}" />
                                            </DataTemplate>
                                        </sideways:DownloadStatusTemplateSelector.Waiting>

                                        <sideways:DownloadStatusTemplateSelector.Running>
                                            <DataTemplate>
                                                <Path 
                                                    sideways:Icon.IsSpinning="True"
                                                    Data="{StaticResource RecycleGeometry}"
                                                    Fill="{x:Static sideways:Brushes.Green}"
                                                    Style="{StaticResource IconStyle}" />
                                            </DataTemplate>
                                        </sideways:DownloadStatusTemplateSelector.Running>

                                        <sideways:DownloadStatusTemplateSelector.Completed>
                                            <DataTemplate>
                                                <Path 
                                                    Data="{StaticResource CheckGeometry}"
                                                    Fill="{x:Static sideways:Brushes.Green}"
                                                    Style="{StaticResource IconStyle}" />
                                            </DataTemplate>
                                        </sideways:DownloadStatusTemplateSelector.Completed>

                                        <sideways:DownloadStatusTemplateSelector.Error>
                                            <DataTemplate>
                                                <Path 
                                                    Data="{StaticResource ErrorGeometry}"
                                                    Fill="{x:Static sideways:Brushes.Red}"
                                                    Style="{StaticResource IconStyle}" />
                                            </DataTemplate>
                                        </sideways:DownloadStatusTemplateSelector.Error>
                                    </sideways:DownloadStatusTemplateSelector>
                                </ContentPresenter.ContentTemplateSelector>
                            </ContentPresenter>
                            <TextBlock Text="{Binding Symbol}" />
                        </StackPanel>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </TabItem>
    </TabControl>
</UserControl>
