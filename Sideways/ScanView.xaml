<UserControl x:Class="Sideways.ScanView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Sideways"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:scan="clr-namespace:Sideways.Scan"
             d:DataContext="{d:DesignInstance local:ScanViewModel}"
             d:DesignHeight="450"
             d:DesignWidth="50"
             mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0">
            <TextBlock HorizontalAlignment="Center" Text="Scan" />

            <ListBox x:Name="CriteriaBox" ItemsSource="{Binding CurrentCriteria}">
                <ListBox.ItemTemplate>
                    <DataTemplate DataType="{x:Type scan:Criteria}">
                        <StackPanel Orientation="Horizontal">
                            <CheckBox IsChecked="{Binding IsActive}" />
                            <TextBlock Text="{Binding Info}" />
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>

            <ContentPresenter Content="{Binding ElementName=CriteriaBox, Path=SelectedItem}">
                <ContentPresenter.Resources>
                    <DataTemplate DataType="{x:Type scan:TimeCriteria}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Row="0"
                                       Grid.Column="0"
                                       Grid.ColumnSpan="2"
                                       Text="Time" />

                            <TextBlock Grid.Row="1"
                                       Grid.Column="0"
                                       Text="Start" />
                            <DatePicker Grid.Row="1"
                                        Grid.Column="1"
                                        Text="{Binding Start}" />

                            <TextBlock Grid.Row="2"
                                       Grid.Column="0"
                                       Text="End" />
                            <DatePicker Grid.Row="2"
                                        Grid.Column="1"
                                        Text="{Binding End}" />
                        </Grid>
                    </DataTemplate>

                    <DataTemplate DataType="{x:Type scan:YieldCriteria}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Row="0"
                                       Grid.Column="0"
                                       Grid.ColumnSpan="2"
                                       Text="Yield" />

                            <TextBlock Grid.Row="1"
                                       Grid.Column="0"
                                       Text="Days" />
                            <TextBox Grid.Row="1"
                                     Grid.Column="1"
                                     Text="{Binding Days}" />

                            <TextBlock Grid.Row="2"
                                       Grid.Column="0"
                                       Text="Min" />
                            <TextBox Grid.Row="2"
                                     Grid.Column="1"
                                     Text="{Binding Min}" />

                            <TextBlock Grid.Row="3"
                                       Grid.Column="0"
                                       Text="Max" />
                            <TextBox Grid.Row="3"
                                     Grid.Column="1"
                                     Text="{Binding Max}" />
                        </Grid>
                    </DataTemplate>

                    <DataTemplate DataType="{x:Type scan:AdrCriteria}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Row="0"
                                       Grid.Column="0"
                                       Grid.ColumnSpan="2"
                                       Text="ADR" />

                            <TextBlock Grid.Row="1"
                                       Grid.Column="0"
                                       Text="Min" />
                            <TextBox Grid.Row="1"
                                     Grid.Column="1"
                                     Text="{Binding Min}" />

                            <TextBlock Grid.Row="2"
                                       Grid.Column="0"
                                       Text="Max" />
                            <TextBox Grid.Row="2"
                                     Grid.Column="1"
                                     Text="{Binding Max}" />
                        </Grid>
                    </DataTemplate>

                    <DataTemplate DataType="{x:Type scan:AverageVolumeCriteria}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Row="0"
                                       Grid.Column="0"
                                       Grid.ColumnSpan="2"
                                       Text="Average volume" />

                            <TextBlock Grid.Row="1"
                                       Grid.Column="0"
                                       Text="Min" />
                            <TextBox Grid.Row="1"
                                     Grid.Column="1"
                                     Text="{Binding Min}" />

                            <TextBlock Grid.Row="2"
                                       Grid.Column="0"
                                       Text="Max" />
                            <TextBox Grid.Row="2"
                                     Grid.Column="1"
                                     Text="{Binding Max}" />
                        </Grid>
                    </DataTemplate>

                    <DataTemplate DataType="{x:Type scan:AverageDollarVolumeCriteria}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Row="0"
                                       Grid.Column="0"
                                       Grid.ColumnSpan="2"
                                       Text="Average dollar volume" />

                            <TextBlock Grid.Row="1"
                                       Grid.Column="0"
                                       Text="Min" />
                            <TextBox Grid.Row="1"
                                     Grid.Column="1"
                                     Text="{Binding Min}" />

                            <TextBlock Grid.Row="2"
                                       Grid.Column="0"
                                       Text="Max" />
                            <TextBox Grid.Row="2"
                                     Grid.Column="1"
                                     Text="{Binding Max}" />
                        </Grid>
                    </DataTemplate>

                    <DataTemplate DataType="{x:Type scan:HasMinutesCriteria}">
                        <TextBlock Text="Has minutes" />
                    </DataTemplate>
                </ContentPresenter.Resources>
            </ContentPresenter>
            <Button Command="{Binding ScanCommand}" Content="Run" />
        </StackPanel>

        <StackPanel Grid.Row="1" Orientation="Horizontal">
            <TextBlock Text="Offset: " />
            <TextBox MinWidth="30" Text="{Binding Offset}" />
        </StackPanel>

        <DataGrid Grid.Row="2"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  ItemsSource="{Binding Results}"
                  SelectedItem="{Binding SelectedResult}">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding Symbol,
                                                      Mode=OneTime}"
                                    Header="Symbol"
                                    IsReadOnly="True" />
                <DataGridTextColumn Binding="{Binding Time,
                                                      Mode=OneTime,
                                                      StringFormat='yyyy-MM-dd'}"
                                    Header="Time"
                                    IsReadOnly="True" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
